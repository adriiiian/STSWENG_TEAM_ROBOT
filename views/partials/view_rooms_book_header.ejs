<div class="container">
    <div class="book_con">
        <div class="container">
            <form id="book_header" onsubmit="return false;" class="row mx-auto book_form" autocomplete="off">
                <div class="col-sm-3 mx-auto book_form_label">
                    CHECK IN
                    <input id="checkin" readonly="readonly"/>
                </div>
                <div class="col-sm-3 mx-auto book_form_label">
                    CHECK OUT
                    <input id="checkout" readonly="readonly"/>
                </div>
                <div class="col-sm-3 mx-auto form-group">
                    <div class="book_form_label">
                        ROOM
                        <select class="form-control" id="room" required>
                            <option value="Single" <%= room.Type == 'Single' ? 'Selected' : '' %>>Single Room</option>
                            <option value="Double" <%= room.Type == 'Double' ? 'Selected' : '' %>>Double Room</option>
                            <option value="Triple" <%= room.Type == 'Triple' ? 'Selected' : '' %>>Triple Room</option>
                            <option value="Quad" <%= room.Type == 'Quad' ? 'Selected' : '' %>>Quad Room</option>
                            <option value="Queen" <%= room.Type == 'Queen' ? 'Selected' : '' %>>Queen Room</option>
                            <option value="King" <%= room.Type == 'King' ? 'Selected' : '' %>>King Room</option>
                        </select>
                    </div>
                </div>
                    
                <div class="col-sm-2.5 mx-auto">
                    <% if (!_email) {%>
                        <!-- IF LOGGED OUT -->
                        <div class="col-sm-2.5 mx-auto btn_booknow_con">
                            <a class="btn btn_booknow" type="submit" value="Submit" href="#" onclick="toggle()">Book now</a>
                        </div>
                    <% } else {%>
                        <!-- IF LOGGED IN -->
                        <div class="col-sm-2.5 mx-auto">
                            <button type="submit" class="btn btn_booknow" onclick="prebook()" href="/views/booking.ejs"> Book now</button>
                        </div>
                    
                    <% }%>
                </div>
            </form>
        </div>
    </div>
</div>