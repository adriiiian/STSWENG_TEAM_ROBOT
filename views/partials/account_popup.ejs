<div id="popup">
    <form id="form_login" onsubmit="return false;" autocomplete="off">
        <div class="form-group">
            <input type="email" class="form-control" id="InputEmail_login" placeholder="EMAIL">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="InputPassword_login" placeholder="PASSWORD">
        </div>
        <p id="login_error" class="text-danger h6 text-center">Incorrect email/password</p>
        <button type="submit" class="btn btn_login" id="login_btn">LOG IN</button>
        <a href="#" small id="create_acc" class="form-text text-muted pt-2" onclick="create_acc()">CREATE AN ACCOUNT</a>
        <a href="#" small id="admin_login" class="form-text text-muted p-0" onclick="admin_login()">ADMIN LOGIN</a><br>
        <a href="#" id="close_popup" class="close_popup" onclick="toggle()">Close</a>
    </form>
    <form id="form_createaccount" onsubmit="return false;" autocomplete="off">
        <div class="form-group">
           <input type="text" class="form-control" id="InputUsername" placeholder="USERNAME">
        </div>
        <div class="form-group">
            <input type="email" class="form-control" id="InputEmail_createacc" placeholder="EMAIL">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="InputPassword_createacc" placeholder="PASSWORD">
        </div>
        <p id="register_error" class="text-danger h6 text-center">Invalid input</p>
        <button type="submit" class="btn btn_register">REGISTER</button>
        <a href="#" small id="back_login" class="form-text back_login" onclick="login()">BACK TO LOG IN</a><br>
        <a href="#" id="close_popup" class="close_popup" onclick="toggle()">Close</a>
    </form>
    <form id="form_admin" onsubmit="return false;" autocomplete="off">
        <div class="p-2" style="font-weight: 500; color: #4e4e4e;">ADMIN LOG IN</div>
        <div class="form-group">    
            <input type="email" class="form-control" id="admin_email" placeholder="EMAIL">
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="admin_password" placeholder="PASSWORD">
        </div>
        <p id="admin_error" class="text-danger h6 text-center">Incorrect email/password</p>
        <button type="submit" class="btn btn_login" id="admin_login_btn">LOG IN</button>
        <a href="#" small id="back_login" class="form-text back_login" onclick="login()">BACK TO USER LOG IN</a><br>
        <a href="#" id="close_popup" class="close_popup" onclick="toggle()">Close</a>
    </form>
</div>