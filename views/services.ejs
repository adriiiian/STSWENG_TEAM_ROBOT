                minDate: defaultDate,
                disableDates: function(date){
                  if(date && dates.indexOf(((date.getMonth() + 1) + "-" + date.getDate() + "-" + date.getFullYear())) > -1){
                    return false;
                  }
                  else{
                    return true;
                  }
                }
              });

            checkindatepicker = $('#checkin').datepicker({
