            }).on('changeDate', function(){
              $('#checkout').datepicker('setStartDate', new Date($(this).val()));
            });
            $('#checkout').datepicker({
                uiLibrary: 'bootstrap4',
                format: 'mm-dd-yyyy',
                todayHighlight: true,
            }).on('changeDate', function(){
              $('#checkin').datepicker('setEndDate', new Date($(this).val()));
            });

            $('#checkin').datepicker('setStartDate', truncateDate(new Date()));

            function truncateDate(date){
              return new Date(date.getMonth(), date.getDate(), date.getFullYear());
            }
        </script>
